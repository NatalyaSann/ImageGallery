<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sannikova.natalya.imagegallery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_splash_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FeedActivity_"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".FilesActivity_"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".PhotosActivity_"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".OfflineActivity_"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>